                    </li>

                    <li class="address">
                        <h1 class="label">Postal:</h1>
                        <span class="info">{{user.postal}}</span>
                    </li>
                </ul>
            </div>

            <div class="basic_info">
                <h1 class="heading">Basic Information</h1>
                <ul>
                    <li class="birthday">
                        <h1 class="label">Username:</h1>
                        <span class="info">{{user.username}}</span>
                    </li>

                    <li class="sex">
                        <h1 class="label">Gender:</h1>
                        <span class="info">{{user.gender}}</span>
                    </li>
                </ul>
            </div>
        </section>
    </div>

