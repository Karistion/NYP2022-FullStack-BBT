<style>
    .modal-backdrop {
        /* bug fix - no overlay */
        display: none;
    }

    body {
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0, 0, 0, .125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

    .gutters-sm>.col,
    .gutters-sm>[class*=col-] {
        padding-right: 8px;
        padding-left: 8px;
    }

    .mb-3,
    .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

    /* Set a style for all buttons */

    .container2 {
        padding: 16px;
        text-align: center;
    }

    button:hover {
        opacity: 1;
    }

    /* Float cancel and delete buttons and add an equal width */
    .cancelbtn,
    .deletebtn {
        float: left;
        width: 50%;
    }

    /* Add a color to the cancel button */
    .cancelbtn {
        background-color: #ccc;
        color: black;
    }

    /* Add a color to the delete button */
    .deletebtn {
        background-color: #f44336;
    }

    /* The Modal (background) */
    .modal {
        display: none;
        /* Hidden by default */
        position: fixed;
        /* Stay in place */
        z-index: 1;
        /* Sit on top */
        left: 0;
        top: 0;
        width: 100%;
        /* Full width */
        height: 100%;
        /* Full height */
        overflow: auto;
        /* Enable scroll if needed */
        background-color: #474e5d;
        padding-top: 50px;
    }

    /* Modal Content/Box */
    .modal-content {
        background-color: #fefefe;
        margin: 5% auto 15% auto;
        /* 5% from the top, 15% from the bottom and centered */
        border: 1px solid #888;
        width: 80%;
        /* Could be more or less, depending on screen size */
    }

    /* Style the horizontal ruler */
    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    /* The Modal Close Button (x) */
    .close {
        position: absolute;
        right: 35px;
        top: 15px;
        font-size: 40px;
        font-weight: bold;
        color: #f1f1f1;
    }

    .close:hover,
    .close:focus {
        color: #f44336;
        cursor: pointer;
    }

    /* Clear floats */
    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }

    /* Change styles for cancel button and delete button on extra small screens */
    @media screen and (max-width: 300px) {

        .cancelbtn,
        .deletebtn {
            width: 100%;
        }
    }
</style>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <form action="/user/profileSave/{{user.id}}" method="post">
                                    {{#if user.image}}
                                    <img id="poster" src="/uploads/{{user.id}}/{{user.image}}" alt="#" class="rounded-circle" width="150">
                                    <hr>
                                    <div clss="modal-footer">
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#image">
                                            Edit
                                        </button>
                                    </div>
                                    {{else}}
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                    <hr>
                                    <div clss="modal-footer">
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#image">
                                            Edit
                                        </button>
                                    </div>
                                    {{/if}}
                                    <!-- Modal -->
                                    <div class="modal fade" id="image" tabindex="-1" aria-labelledby="exampleModalLabel"
                                        style="display:none;" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="image">Confirmation</h5>
                                                    <span style="float:right;"><button type="button" class="btn-close"
                                                            data-bs-dismiss="modal" aria-label="Close"></button></span>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to use this profile picture?
                                                </div>
                                                {{!â€”- Hidden field to submit URL of poster to the server --}}
                                                <input id="posterURL" type="hidden" name="posterURL">
                                                <div class="custom-file mb-2">
                                                    <input type="file" class="custom-file-input" id="posterUpload"
                                                        name="posterUpload"
                                                        accept="image/png,image/jpeg,image/jpg,image/gif"
                                                        onchange="imagePreview(event);">
                                                    {{!-- <label class="custom-file-label" for="customFile">Choose
                                                        File</label> --}}
                                                        <img id="pfp" src="../../../public/jordan/images/default.jpg"  class="border img-thumbnail img-fluid rounded circle" style="height:150px !important;width:150px !important;display:block !important;margin: auto !important;"/>
                                                </div>
                                                <div class="modal-footer">
                                                    <button id="btnSubmit" type="submit" class="btn btn-primary">Save
                                                    </button>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.name }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.gender }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.email }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.mobile }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Username</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.username }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.address }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Postal Code</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.postal }}
                            </div>
                        </div>
                        <hr>
                        {{#if (check user.member "member")}}
                        <button class="btn btn-warning"><a href="/user/editprofile/{{user.id}}"
                                style="color: white;text-decoration: none;">Edit</a></button>
                        {{else}}
                        <button class="btn btn-warning"><a href="/report/updateAdmin"
                                style="color: white;text-decoration: none;"
                                class="mm-{{cssactive page 'users'}}">Edit</a></button>
                        {{/if}}
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#id{{id}}">
                            Delete
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="id{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                            style="display:none;" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="id{{id}}">Confirmation</h5>
                                        <span style="float:right;"><button type="button" class="btn-close"
                                                data-bs-dismiss="modal" aria-label="Close"></button></span>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this account {{user.id}}?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary"><a
                                                href="/user/deleteUser/{{user.id}}"
                                                style="color: white;text-decoration: none;">Confirm</a></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- <button type="button" class="btn btn-danger" data-bs-toggle="modal"><a
                                href="/user/deleteUser/{{user.id}}" class="card-link" data-toggle="confirmation"
                                data-title="Confirm delete?">Delete</a></button> --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    var imagePreview = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('pfp');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        };
</script>