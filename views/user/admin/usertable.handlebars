<div class="card">
<h1 class="display-4">User Management</h1>
<div>
  {{#if user}}
  <p>There are {{user.length}} account(s).</p>
  {{else}}
  <p>There are no Customers.</p>
  {{/if}}
</div>
<!-- 
<button id="hide">Hide</button>
<button id="show">Show</button> -->

<div class="card-body">
  <table class="table table-striped" id="customers-table">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Name</th>
        <th>Username</th>
        <th>Gender</th>
        <th>Phone</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
        {{#each user}}
        <tr>
          <td>{{ id }}</td>
          {{!-- <td>{{ user.get_customer_id() }}</td> --}}
          <td>{{ name }}</td>
          <td>{{ username }}</td>
          <td>{{ gender }}</td>
          <td>{{ mobile }}</td>
          <td>{{ email }}</td>
          <td>
            <button onclick="document.getElementById('id01').style.display='block'" class="btn btn-danger">Suspend</button>
          </td>
        </tr>
      </tbody>
        {{/each}}
    </table>
  </div>
</div>
