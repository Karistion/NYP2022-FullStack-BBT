    <thead>
      <tr>
        <th>Invoice ID</th>
        <th>Status</th>
        <th>Total Price</th>
        <th>Delivery Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each invoices}}
      <tr>
        <td>{{ id }}</td>
        <td>{{ status }}. {{ statusdesc status }}</td>
        <td>{{ totalprice }}</td>
        <td>{{ formatDate datedelivery }}</td>
        {{#if (check delivered 0)}}
        <td><a href="/invoice/updateinvoice/{{id}}" class="btn btn-warning">Update Order</a></td>
